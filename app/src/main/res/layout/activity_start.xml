<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background16"
    android:weightSum="10"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="174dp"
        android:layout_height="187dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="292dp"
        app:srcCompat="@drawable/logopng" />

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewStarts"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="154dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/yellow2"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="casual"
            android:text="Incepe Jocul"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="27sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/RulesCw"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="75dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/orange2"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        >

        <TextView
            android:id="@+id/RulesTW"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/CardViewRules"
            android:layout_alignStart="@+id/CardViewRules"
            android:layout_marginVertical="8dp"
            android:layout_marginTop="-154dp"
            android:fontFamily="casual"
            android:text="Regulament"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="27sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

</RelativeLayout>